;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

; Breadcrumbs
; --------------
settings[invent_breadcrumb] = 1
settings[invent_breadcrumb_home] = 0
settings[invent_breadcrumb_title] = 1

; Navbar
; --------------
settings[invent_navbar_position] = ''
settings[invent_navbar_inverse] = 0

; Region Wells
; --------------
settings[invent_region_well-navigation] = ''
settings[invent_region_well-header] = ''
settings[invent_region_well-highlighted] = ''
settings[invent_region_well-help] = ''
settings[invent_region_well-content] = ''
settings[invent_region_well-sidebar_first] = 'well'
settings[invent_region_well-sidebar_second] = ''
settings[invent_region_well-footer] = ''

; Anchors
; --------------
settings[invent_anchors_fix] = 1
settings[invent_anchors_smooth_scrolling] = 1

; Popovers
; --------------
settings[invent_popover_enabled] = 1
settings[invent_popover_animation] = 1
settings[invent_popover_html] = 0
settings[invent_popover_placement] = 'right'
settings[invent_popover_selector] = ''
settings[invent_popover_trigger]['hover'] = 0
settings[invent_popover_trigger]['focus'] = 0
settings[invent_popover_trigger]['click'] = 'click'
settings[invent_popover_title] = ''
settings[invent_popover_content] = ''
settings[invent_popover_delay] = 0
settings[invent_popover_container] = 'body'

; Tooltips
; --------------
settings[invent_tooltip_enabled] = 1
settings[invent_tooltip_descriptions] = 1
settings[invent_tooltip_animation] = 1
settings[invent_tooltip_html] = 0
settings[invent_tooltip_placement] = 'auto left'
settings[invent_tooltip_selector] = ''
settings[invent_tooltip_trigger]['hover'] = 'hover'
settings[invent_tooltip_trigger]['focus'] = 'focus'
settings[invent_tooltip_trigger]['click'] = 0
settings[invent_tooltip_delay] = 0
settings[invent_tooltip_container] = 'body'

; Advanced
; --------------
settings[invent_cdn] = 3.0.2
settings[invent_bootswatch] = ''

; Global
; --------------
settings[toggle_name] = 1
settings[toggle_search] = 1


