/**
 * Implements get variables globally
 * @return array
 */
function imx_dashboard_get_variables() {
  $variables = &drupal_static(__FUNCTION__);
  if (!isset($variables)) {
    $variables=array(
      'settings'  => variable_get('imx_dashboard_settings'),
    );
  }
  return $variables;
}
