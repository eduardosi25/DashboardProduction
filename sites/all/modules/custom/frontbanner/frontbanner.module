function getcookie($name,$onlyvalue=false){
  $matches=array();
  $COOKIE=$_SERVER['HTTP_COOKIE'].';';
  $regex='{'.$name.'=[a-zA-Z0-9]+;}';
  preg_match($regex, $COOKIE, $matches);
  if(count($matches)>0){
    if($onlyvalue){
      $COOKIE=explode('=',$matches[0]);
      return str_replace(';', '', $COOKIE[1]);
    }
    return $matches[0];
  }
  return false;
}

